generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"] //allows search features
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// npx prisma generate (to let us work with it) -> npx prisma db push (to push the changes!)
model Category {
  id   String @id @default(uuid())
  name String
  ais  AI[]
}

// EPERM: operation not permitted, unlink 'C:\Users\Lenovo\Desktop\trixle\node_modules\.prisma\client\query_engine-windows.dll.node' close an already running app and then re run the command

model Photo {
  id             String   @id @default(uuid())
  userId         String
  userName       String
  userProfile    String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  src            String
  caption        String   @db.Text
  description    String
  userBackground String   @default("https://i.pinimg.com/236x/a1/0b/cb/a10bcbca5d203c01d1dd91f37dea0305.jpg")
  isLiked        Boolean  @default(false)
  likedByUserId  String   @default("")

  @@fulltext([caption])
}

model AI {
  id           String @id @default(uuid())
  userId       String
  userName     String
  src          String
  name         String @db.Text //enables much longer characters and makes it searchable
  description  String
  instructions String @db.Text
  seed         String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId String
  messages   Message[]

  @@index([categoryId])
  @@fulltext([name]) //enabling fulltext search for the name
}

enum Role {
  user
  system
}

model Message {
  id        String   @id @default(uuid())
  role      Role
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  aiId      String
  userId    String
  ai        AI       @relation(fields: [aiId], references: [id], onDelete: Cascade)

  @@index([aiId])
}

model UserSubscription {
  id                     String    @id @default(uuid())
  userId                 String    @unique
  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @unique @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @unique @map(name: "stripe_current_period_end")
}

model Users {
  id             String     @id
  name           String?
  username       String?    @unique
  userProfile    String?
  userBackground String?
  posts          Post[]
  likes          Like[]
  comments       Comments[]
}

model Comments {
  id        String   @id
  content   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postId    String
  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([userId])
}

model Post {
  id             String   @id @default(uuid())
  content        String   @db.VarChar(500)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  image          String?
  userId         String
  username       String
  userProfileImg String
  user           Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes          Like[]

  comments Comments[]

  @@index([userId])
}

model Like {
  userId String
  postId String
  user   Users  @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@id([userId, postId])
  @@index([userId])
  @@index([postId])
}
